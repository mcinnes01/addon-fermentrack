{
  "name": "Fermentrack",
  "version": "2021.1.36",
  "slug": "fermentrack",
  "description": "BrewPi-compatible fermentation tracking & temperature control software",
  "url": "https://github.com/mcinnes01/addon-fermentrack",
  "webui": "[PROTO:ssl]://[HOST]:[PORT:8080]",
  "startup": "services",
  "init": false,
  "ingress": true,
  "ingress_port": 1337,
  "panel_icon": "mdi:beer",
  "panel_title": "Fermentrack",
  "arch": ["aarch64", "amd64", "armv7"],
  "boot": "auto",
  "auto_uart": true,
  "usb": true,
  "device-tree": true,
  "privileged": [
    "SYS_RAWIO",
    "NET_ADMIN"
  ], 
  "hassio_api": true,
  "hassio_role": "manager",
  "homeassistant_api": true,
  "map": ["ssl"],
  "options": {
    "plugins": [],
    "env_vars": [],
    "ssl": true,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem"
  },
  "ports": {
    "8080/tcp": null
  },
  "ports_description": {
    "8080/tcp": "Not required for Ingress"
  },
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)?",
    "plugins": ["str"],
    "certfile": "str",
    "keyfile": "str",
    "ssl": "bool",
    "env_vars": [
      {
        "name": "match(^GF_([A-Z0-9_])+$)",
        "value": "str"
      }
    ]
  }
}
